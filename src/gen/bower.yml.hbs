name: {{#if name}} {{{name}}} {{else}} {{{@name}}} {{/if}}
version: {{#if version}} {{{version}}} {{else}} {{{@version}}} {{/if}}

{{#if @author}}
authors:
  - '{{@author.name}}{{#if @author.email}} <{{@author.email}}>{{/if}}'
{{/if}}

{{#if dependencies}}
dependencies:
  {{#each dependencies}}
  - {{{@key}}}: '{{{this}}}'
  {{/each}}
{{/if}}

{{#if devDependencies}}
devDependencies:
  {{#each devDependencies}}
  - {{{@key}}}: '{{{this}}}'
  {{/each}}
{{/if}}

{{#if @description}}
description: '{{{@description}}}'
{{/if}}

{{#if homepage}}
homepage: '{{{homepage}}}'
{{/if}}

{{#if ignore}}
ignore: {{{ignore}}}
{{/if}}

{{#if keywords}}
keywords:
  {{#each keywords}}
  - {{{this}}}
  {{/each}}
{{/if}}

{{#if license}}
license: {{{license}}}
{{/if}}

{{#if main}}
main: '{{{main}}}'
{{/if}}

{{#if moduleType}}
moduleType: {{{moduleType}}}
{{/if}}

{{#if private}}
private: {{{private}}}
{{/if}}

{{#if @repository}}
repository:
  {{#if @repository.type}}
  type: '{{{@repository.type}}}'
  {{/if}}
  {{#if @repository.url}}
  url: '{{{@repository.url}}}'
  {{/if}}
{{/if}}

{{#if resolutions}}
resolutions:
  {{#each resolutions}}
  - {{{@key}}}: '{{{this}}}'
  {{/each}}
{{/if}}